<% content = capture do %>
  <% fields.each do |field| -%>
    <%= field %>
  <% end -%>
  <% if params[:q].present? && (found_in_hits = helpers.display_found_in(@document)).present? %>
    <dt class="blacklight-found_in col-sm-3">Found in:</dt>
    <dd class="blacklight-found_in col-sm-9" data-testid="browse-value-found-in"><%= found_in_hits %></dd>
  <% end %>
<% end %>

<%= @tag.nil? ? content : tag.public_send(@tag, content, class: @classes, data: { testid: "browse-document-metadata-#{@fields.first.document.id}" }, **@component_args) %>
