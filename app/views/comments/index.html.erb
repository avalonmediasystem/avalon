<% @page_title = t('contact.title', :application_name => application_name) %>

<div class="container-fluid">

  <h2>Contact us</h2>
  <p>If you have questions or comments about this site, please fill out the form below.</p>
  <p><strong>All fields are required</strong></p>
  <div class='col-sm-10 col-md-8 col-lg-6'>
    <%= bootstrap_form_for @comment do |comment| %>
    <fieldset>
      <%= comment.text_field :name, label: 'Name' %>
      <%= comment.hidden_field :nickname %>
      <%= comment.email_field :email, label: 'Email address' %>
      <%= comment.email_field :email_confirmation, label: 'Confirm email address' %>
      <%= comment.select :subject, options_for_select(@subjects), { :prompt => 'Select one' }, { :control_class => 'form-control' } %>
      <%= comment.text_area :comment, rows: 10 %>
      <% if Settings.recaptcha.site_key.present?%>
        <% if Settings.recaptcha.type == "v2_checkbox" %>
	  <div class="mb-3">
	    <%= recaptcha_tags %>
	  </div>
        <% elsif Settings.recaptcha.type == "v3" %>
	  <div class="mb-3">
	    <%= recaptcha_v3(action: Settings.recaptcha.v3.action) %>
	  </div>
        <% end %>
      <% end %>
      <%= comment.primary "Submit comments" %>
    </fieldset>
  <% end %>
</div>
</div>
