<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-12">
    <% encode_presenter = EncodePresenter.new(@encode_record) %>
    <h2>
      <strong>Job ID:</strong>
      <%= encode_presenter.id %>
    </h2>

    <section id="job-view">
      <p>
        <strong>Status:</strong>
        <%= encode_presenter.status %>
      </p>
      <p>
        <strong>Adapter:</strong>
        <%= encode_presenter.adapter %>
      </p>
      <p>
        <strong>Adapter Job ID:</strong>
        <%= encode_presenter.global_id %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= encode_presenter.title %>
      </p>

      <section>
        <% if !encode_presenter.errors.empty? %>
          <p>
            <strong>Error Message:</strong>
            <%= encode_presenter.errors[0] %>
          </p>
        <% end %>
        <p>
          <strong>Job Started:</strong>
          <%= encode_presenter.started %>
        </p>
        <p>
          <strong>Job Last Updated:</strong>
          <%= encode_presenter.ended %>
        </p>
      </section>

      <p>
        <strong>Create Options:</strong>
        <div class="box box-default">
          <pre><%= encode_presenter.create_options %></pre>
        </div>
      </p>

      <p>
        <strong>Raw Object:</strong>
        <div class="box box-default">
          <pre><%= encode_presenter.raw_object %></pre>
        </div>
      </p>
    </section>
  </div>
</div>
