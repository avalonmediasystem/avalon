<div class="row playlist-action-buttons">
  <div class="col-sm-6">
    <% if current_ability.can? :edit, @playlist %>
    <div id="edit-playlist-button">
      <%= link_to edit_playlist_path(@playlist), class: "btn btn-primary btn-block text-nowrap" do %>
      <i class="fa fa-edit" aria-hidden="true"></i> Edit Playlist
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="col-sm-6">
    <% if current_ability.can? :duplicate, @playlist %>
    <%= button_tag( type: 'button', data: { playlist: @playlist }, class: 'copy-playlist-button btn btn-outline btn-block text-nowrap') do %>
    <i class="fa fa-clone" aria-hidden="true"></i> Copy Playlist
    <% end %>
    <% end %>
  </div>
</div>

<% if current_ability.can? :duplicate, @playlist %>
<%= render partial: 'copy_playlist_modal', locals: { with_refresh: false } %>
<% end %>

<% content_for :page_scripts do %>
<script>
  $(document).ready(function () {
    window.add_copy_playlist_button_event()
  });
</script>
<% end %>
