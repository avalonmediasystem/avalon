%>
<div class="col-md-9">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to "View Playlist", @playlist, { class: 'btn btn-xs btn-primary'} %>
      <% if can?(:destroy, @playlist) %>
        <%= link_to "Delete Playlist", @playlist, method: :delete, class: 'btn btn-xs btn-danger btn-confirmation', data: {placement: 'bottom'} %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h3 style="display:inline-block">Playlist Details</h3>
      <a id="playlist_edit_button" data-toggle="collapse" data-target="#playlist_edit_div, #playlist_view_div" class="fa fa-edit btn btn-sm"></a>
    </div>
  </div>
  <div id="playlist_view_div" class="container collapse <%= 'in' if @playlist.errors.empty? %>">
    <div class="row">
      <div class="col-sm-2">Name</div>
      <div class="col-sm-10"><%= @playlist.title %></div>
    </div>
    <div class="row">
      <div class="col-sm-2">Description</div>
      <div class="col-sm-10"><%= @playlist.comment %></div>
    </div>
    <div class="row">
      <div class="col-sm-2"><%= t("blacklight/folders/folder.visibility", scope: "helpers.label") %></div>
      <div class="col-sm-10">
        <% if @playlist.visibility==Playlist::PUBLIC %>
          <%= human_friendly_visibility Playlist::PUBLIC %>
        <% elsif @playlist.visibility==Playlist::PRIVATE %>
          <%= human_friendly_visibility Playlist::PRIVATE %>
        <% else %>
          <%= human_friendly_visibility Playlist::PRIVATE_WITH_TOKEN %>
          <div class="row" style="margin-top:9px;">
            <div class="col-xs-9">
              <div class="input-group">
                <%= url_field_tag 'playlist-share-link',
                  @playlist.access_token_url,
                  class: 'form-control', readonly: true, style: 'background:white;' %>
                <span class="input-group-btn">
                  <%= button_tag "Copy", id: 'playlist-share-btn',
                    class: "btn btn-secondary" %>
                </span>
              </div>
            </div>
            <div class="col-xs-2">
              <%= button_tag "Get new link", id: 'get-new-link',
                class: 'btn btn-secondary', data: { 'playlist_id': @playlist.id } %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>

<% content_for :page_scripts do %>
  <script>
  $('#playlist-share-btn').popover({
    trigger: 'hover',
    placement: 'top',
    content: 'Copy share link'
  });

  $('#playlist-share-btn').click( function (event) {
    var copytarget = $('#playlist-share-link');
    $(this).popover('hide');

    // select text
    copytarget.select();
    try {
      // copy text
      document.execCommand('copy');
      copytarget.blur();
      $(this).attr('data-content', 'Copied');
    }
    catch (err) {
      $(this).attr('data-content', 'Please press Ctrl/Cmd+C to copy');
    }
    $(this).popover('show');
    setTimeout((function () {
        $(this).popover('hide');
        $(this).attr('data-content', 'Copy share link');
      }).bind(this), 3000);
  });

  var popover_content = '<p>If you get a new link, the previous link will stop working.<p>'+
          '<p><b>Get a new link?</b></p>' +
          '<div style="float:right;">'+
            '<button type="submit" onclick="new_link_confirm()" class="btn btn-danger btn-confirm" style="margin:10px;">Yes</button>' +
            '<button type="submit" onclick="new_link_cancel()" class="btn btn-primary btn-confirm">Cancel</button>'+
          '</div>'
  var popover_template = '<div class="popover" role="tooltip" style="width: 200px;">'+
      '<div class="arrow"></div>'+
      '<h3 class="popover-title"></h3>'+
      '<div class="popover-content"></div>'+
    '</div>'

  $('#get-new-link').popover({
    trigger: 'click',
    html: true,
    placement: 'top',
    template: popover_template,
    content: popover_content,
  });

  var new_link_cancel = function (event) {
    $('#get-new-link').popover('hide').click();
  }

  var new_link_confirm = function (event) {
    $.ajax({
      type: "PATCH",
      url: '/playlists/' + $('#get-new-link').data().playlistId + '/regenerate_access_token',
      success: function (data, status) {
        $('#playlist-share-link').attr('value', data.access_token_url)
      },
      complete: function () {
          $('#get-new-link').popover('hide').click();
      }
    });
  }

  </script>
<% end %>
