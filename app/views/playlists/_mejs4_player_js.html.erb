<% content_for :page_styles do %>
<%= stylesheet_link_tag 'mejs4_player' %>
<% end %>
<% content_for :page_scripts do %>
<%= javascript_include_tag "mejs4_player" %>
<% end %>

<script>
var playlistItem = <%= current_playlist_item.to_json.html_safe %>;

var mejs4AvalonPlayer = new MEJSPlayer({
  currentStreamInfo: <%= section_info.to_json.html_safe %>,
  features: ['playpause', 'current', 'progress', 'duration', 'trackScrubber', 'volume', 'quality', 'markers', 'addMarkerToPlaylist', 'fullscreen'],
  highlightRail: true,
  playlistItem: playlistItem
});
currentPlayer = mejs4AvalonPlayer.player;
</script>
