%>

<p class="text-muted">Drag files to reorder them.</p>

<% if @masterFiles.blank? %>
  <div class="well">There are no media files</div>
<% else %>
  <div id="mediaobject_structure">
    <ul class="header">
      <li>Type</li>
      <li>Section label</li>
      <li>File name</li>
      <li>Size</li>
      <li></li>
    </ul>
    <ul class="sortable">
      <% @masterFiles.each_with_index do |section, index| %>
      <li class="section" data-segment="<%= section.id %>">
        <ul class="fileinfo">
          <li>
            <% case section.file_format
                when 'Sound' %>
            <i class="fa fa-volume-up"></i>
            <% when 'Moving image' %>
            <i class="fa fa-film"></i>
            <% else %>
            <i class="fa fa-question-sign"></i>
            <% end %>
          </li>
          <li>
            <%= section.title.blank? ? '&#8212;'.html_safe : section.title %>
          </li>
          <li class="mediaobject-filename">
            <% if section.file_location.present? %>
            <%= truncate_center(File.basename(section.file_location.to_s), 50, 20) %>
            <% else %>
            -
            <% end %>
          </li>
          <li>
            <%= number_to_human_size(section.file_size) %>
          </li>
          <li>
            <button class="btn btn-outline btn-struct" type="button" data-bs-toggle="collapse" data-bs-target="#structure_<%= index %>" aria-expanded="false" aria-controls="structure_<%= index %>" data-testid="media-object-edit-structure-btn-<%= index %>">
              Edit Structure
            </button>
          </li>
        </ul>
        <div id="structure_<%= index %>" class="collapse structure_tool">
          <div class="tool_actions">
            <span class="tool_label">Structure</span>
            <%= form_for section, :url => attach_structure_master_file_path(section.id), html: {method: "post"} do |form| %>
            <%= form.file_field :structure, id: "structure_#{index}_filedata", class: "filedata", style: "display:none;" %>
            <% item_label=html_escape(stream_label_for(section)) %>
            <% stream_url=hls_manifest_master_file_url(section.id, quality: 'auto') %>
            <div class="btn-toolbar">
              <label class="btn btn-primary btn-struct me-1 file-upload-label" for="structure_<%= index %>_filedata" data-testid="media-object-struct-upload-btn-<%= index %>" ><%= section.structuralMetadata.content.present? ? 'Replace' : 'Upload'%></label>
              <% if section.structuralMetadata.valid? %>
                <%= react_component("ReactButtonContainer", {
                  props: {
                    canvasIndex: index,
                    mediaObjectID: @media_object.id,
                    masterFileID: section.id,
                    baseURL: request.protocol+request.host_with_port,
                    initStructure: section.structuralMetadata.as_json
                  },
                  html_options: { class: 'react-button-container' }
                }) %>
              <% else %>
                <%= react_component("ReactButtonContainer", {
                  props: {
                    canvasIndex: index,
                    mediaObjectID: @media_object.id,
                    masterFileID: section.id,
                    baseURL: request.protocol+request.host_with_port,
                    initStructure: { label: "#{item_label}", type: "div", items: [] }
                  }, html_options: { class: 'react-button-container' }
                }) %>
              <% end %>
              <% if section.structuralMetadata.content.present? %>
                <%= link_to 'Remove', structure_master_file_path(section.id), method: :delete, class: 'btn btn-danger btn-struct btn-confirmation', data: { placement: 'top', confirm: 'Are you sure?', testid:"media-object-remove-structure-btn" } %>
              <% end %>
            </div>
            <% end %>
          </div>
          <div class="structure_view"></div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
  <br class="clear" />
  <%= bootstrap_form_for @media_object do |media| %>
    <%= render "workflow_buttons" %>
  <% end %>

<% end %>

<% content_for :page_scripts do %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filedataElements = queryAll('.filedata');
    filedataElements.forEach(function(filedata) {
      filedata.addEventListener('change', function() {
        this.closest('form').submit();
      });
    });
  });
</script>
<% end %>
