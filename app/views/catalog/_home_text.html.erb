<% if flash[:notice].present? %>
<div class="clearfix" id="alerts">
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>  
</div>
<% end %>

<ul class="thumbnails">
  <li class="span3">
    <%= link_to media_object_path("avalon:4553") do %>
      <strong>Featured Film</strong>
    <% end %>
    <%= link_to media_object_path("avalon:4553") do %>
      <%= image_tag "featured/mastersOfDisaster.png", alt: "Featured Film", class: 'thumbnail' %>
    <% end %>
    <%= link_to 'The Masters of Disaster (1985)', media_object_path("avalon:4553") %>
  </li>
  <li class="span3">
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Indiana University Libraries Moving Image Archive') do %>
      <strong>Featured Video Collection</strong>
    <% end %>
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Indiana University Libraries Moving Image Archive') do %>
      <%= image_tag "featured/minnieMouse.png", alt: "Featured Video Collection", class: 'thumbnail' %>
    <% end %>
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Indiana University Libraries Moving Image Archive') do %>
      Indiana University Libraries Moving Image Archive
    <% end %>
  </li>
  <li class="span3">
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Birch Bayh Senatorial Papers') do %>
      <strong>Featured Audio Collection</strong>
    <% end %>
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Birch Bayh Senatorial Papers') do %>
      <%= image_tag "featured/birchBayhHearings.png", alt: "Featured Audio Collection", class: 'thumbnail' %>
    <% end %>
    <%= link_to catalog_index_path('f[collection_ssim][]' => 'Birch Bayh Senatorial Papers') do %>
      Birch Bayh Senate Hearings
    <% end %>
  </li>
</ul>

