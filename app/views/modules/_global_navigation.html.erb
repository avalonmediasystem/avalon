<!-- This should really be rewritten so that the ingest links are not even
     delivered to mobile devices instead of just hidden but that requires
     looking into methods for server side detection -->
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to root_path, class: 'brand' do  %>
        <p>Media <span class="brand-color2">Collections</span> Online</p>
      <% end %>
      <div class="iu-search">	
	<%= link_to 'Browse', catalog_index_path(search_field: 'all_fields', utf8: 'âœ“', q: ''), class:'navbar-browse' %>
        <form action="/" method="get" class="navbar-search">
          <input type="text" class="search-query" name="q" placeholder="Search">
        </form>
      </div>
    </div>
  </div>
  <% if (can? :read, Admin::Collection) || (can? :manage, Admin::Group) || (user_session && user_session[:lti_group]) %>
    <div class="nav2">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
	</a>

	<div class="nav-collapse collapse">
          <ul class="nav">
            <% if can? :read, Admin::Collection %>
            <li class=<%= active_for_controller('admin/collections') %>><%= link_to 'Manage Content', admin_collections_path %></li>
            <% end %>

            <% if can? :manage, Admin::Group %>
            <li class=<%= active_for_controller('admin/groups') %>><%= link_to 'Manage Groups', admin_groups_path, target: '_admin' %></li>
            <% end %>
            <% if user_session && user_session[:lti_group] %>
            <li><%= link_to(vgroup_display(user_session[:lti_group]), catalog_index_path('f[read_access_virtual_group_ssim][]' => user_session[:lti_group])) %></li>
            <% end %>
          </ul>        
	</div>
      </div>
    </div>
  <% end %>
</div>
