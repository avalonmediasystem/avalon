<% # Write a helper method to handle this logic since it will be repeated
   # in other places %>
<% unless item.nil? %>
<dt>
  <% if can? :read, item %>
    <%= link_to media_object_path(item[:id]) do %> 
    <% unless item["title_t"].blank? or item["title_t"].first.blank? %><%= item["title_t"].first %><% else %>No title provided<% end%> (<%= item[:id] %>)
    <% end %>
  <% else %>
      <% unless item["title_t"].blank? or item["title_t"].first.blank? %><%= item["title_t"].first %><% else %>No title provided<% end%> (<%= item[:id] %>)
  <% end %>
</dt>
<dd class="whitespace">
  <!-- Need to shorten the summary if it is too long -->
  <% unless item["summary_display"].blank? or item["summary_display"].first.blank? %>
    <%= truncate(item["summary_display"].first, length: 140) %>
  <% else %>
    <em>No summary available</em>
  <% end %>
</dd>
<% end %>
