<%# Override of samvera-persona view partial to update table display %>
<%= render partial: 'index_title' %>

<div class="card users-invite mb-3">
  <div class="card-header">
      <%= t('.invite_users') %>
  </div>

  <div class="card-body">
    <% @user ||= User.new %>
    <%= form_for(:user, url: main_app.user_invitation_path, html: { method: :post , class: 'row row-cols-lg-auto g-3 align-items-center'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: @user %>

      <% @user.class.invite_key_fields.each do |field| -%>
        <div class="col-12">
          <div class="input-group">
            <%= f.label field, t('.invite_users'), for: field, class: 'col-form-label fw-bold required' %>
            <%= f.text_field field, class: 'form-control ms-2 required' %>
          </div>
        </div>
      <% end -%>

      <%= f.submit t('.add'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="users-listing">
  <%= react_component("UsersTable", { props: { 
      url: '/persona/users/paged_index', 
      hasProvider: User.column_names.include?('provider'),
    }
  }) %>
</div>
