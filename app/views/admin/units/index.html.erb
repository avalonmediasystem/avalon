<% @page_title = t('units.title', :application_name => application_name) %>

<% unless @units.empty? %>
  <div class="row display-flex page-title-wrapper">
    <div class="col-xs-6">
      <h1 class="page-title">My Units</h1>
    </div>
    <div class="col-xs-6 unit-btn">
      <%= link_to('<span class="btn btn-primary btn-large" data-testid="unit-create-unit-button">Create unit</span>'.html_safe, new_admin_unit_path) unless cannot? :create, Admin::Unit %>
    </div>
  </div>

  <table class='table table-striped table-responsive' id='admin-units-table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Items</th>
        <th>Managers</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @units.to_a.each do |unit| %>
      <tr>
        <td> <strong><%= link_to unit.name, admin_unit_path(unit.id), 'data-testid':"unit-name-table" %></strong> </td>
        <td>
          <%= link_to(pluralize(unit.collection_count, 'collection'), collections_path(filter: unit.name)) %>
        </td>
        <td> <%= pluralize(unit.admin_count, 'unit administrator') %> </td>
        <td> <%= unit.description&.truncate(100, separator: ' ') %> </td>
        <td class="text-end">
          <% if can?(:destroy, unit) %>
          <div class="btn-group">
            <%= link_to('Delete', remove_admin_unit_path(unit.id), class: 'btn btn-danger btn-sm', 'data-testid': 'unit-delete-unit-btn')%>
          </div>
          <% else %>
          &nbsp;
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <div class="hero-unit">
    <h2>You don't have any units yet</h2>

    <% if can? :create, Admin::Unit %>
    <p>Would you like to create one?</p>
    <div class="whitespace"></div>
    <p>
      <%= link_to('<span class="btn btn-primary btn-large">Create Unit</span>'.html_safe, new_admin_unit_path) %>
    </p>
    <% else %>
    <p>You'll need to be assigned to one</p>
    <% end %>

  </div>
<% end %>
